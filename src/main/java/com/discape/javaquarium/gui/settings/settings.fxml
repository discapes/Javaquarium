<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="settingsRootPane" prefHeight="400.0" prefWidth="300.0"
            styleClass="frame" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.discape.javaquarium.gui.settings.SettingsPresenter">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Theme">
                    <font>
                        <Font size="22.0"/>
                    </font>
                </Label>
                <ChoiceBox fx:id="themePicker" prefWidth="150.0" VBox.vgrow="ALWAYS"/>
                <Label text="Chart history (seconds) = ">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Slider fx:id="chartHistorySSlider" blockIncrement="5.0" majorTickUnit="10.0" minorTickCount="1"
                        showTickLabels="true" showTickMarks="true" snapToTicks="true" value="20.0"/>
                <Label text="Chart update rate (ms) = ">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Slider fx:id="chartUpdateRateMsSlider" majorTickUnit="100.0" max="1000.0" minorTickCount="1"
                        showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0"/>
                <Label text="Tick rate (ms) = ">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Slider fx:id="tickRateMsSlider" blockIncrement="5.0" majorTickUnit="100.0" max="1000.0"
                        minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0"/>
                <Button mnemonicParsing="false" onAction="#apply" text="Apply">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
